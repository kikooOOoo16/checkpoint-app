<!-- Toast Container -->
<div class="toast-container position-fixed top-0 start-50 translate-middle-x p-3">
    <!-- Error Toast -->
    <div id="errorToast" class="toast align-items-center text-white bg-danger border-0 fade" role="alert"
         aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="errorToastMessage">
                <%= locals.error || ''; %>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                    aria-label="Close"></button>
        </div>
    </div>

    <!-- Success Toast -->
    <div id="successToast" class="toast align-items-center text-white bg-success border-0 fade" role="alert"
         aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="successToastMessage">
                <%= locals.successMessage || ''; %>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                    aria-label="Close"></button>
        </div>
    </div>
</div>
